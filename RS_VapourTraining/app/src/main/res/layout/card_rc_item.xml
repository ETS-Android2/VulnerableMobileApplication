<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/singleItemCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="8dp"
    app:cardBackgroundColor="@color/color2"
    card_view:cardPreventCornerOverlap="false"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@color/color2"
        android:orientation="vertical">

        <!--text view for our course name-->
        <TextView
            android:id="@+id/card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Card Name"
            android:background="@color/color2"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/color2"
            android:weightSum="2">

            <!--text view for our course tracks-->
            <ImageView
                android:id="@+id/card_pic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="2dp"
                android:src="@drawable/ic_baseline_credit_card_24"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@color/color2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/card_nummber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:background="@color/color2"
                    android:text="Card Number"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@color/color2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Expire_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="3dp"
                        android:background="@color/color2"
                        android:text="Expiry date"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/card_cvv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="3dp"
                        android:background="@color/color2"
                        android:text="CVV"
                        android:textColor="@color/black" />
                </LinearLayout>

            </LinearLayout>
            <!--text view for our course duration-->


        </LinearLayout>


        <!--text view for our course description-->


    </LinearLayout>

</androidx.cardview.widget.CardView>